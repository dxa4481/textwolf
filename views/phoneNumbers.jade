extends layout

block content
	form(method='post')
		table(border='1')
			tr
				th Phone Numbers
				th Rolls (will be randomized)
			tr
				td
					ul
						each player in vars.players
							li
								input(type='text', name='number', value='#{player.number}')
								select
									each val, key in player.providers
										if val
											option(name='#{key}', value='#{key}', select="selected")
												| #{key}
										else
											option(name='#{key}', value='#{key}')
												| #{key}
				td
					ul
						each roll in vars.rolls
							li
								input(type='text', name='roll', value='#{roll.name}')
		input(type="submit", value="Text them!")
